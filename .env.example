# .env.example - copy to .env.local and fill with your secrets
# DO NOT commit your real .env.local to git. Add .env.local to .gitignore.

# WalletConnect v2
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# App URL (used for redirects)
NEXT_PUBLIC_URL=http://localhost:3000

# Mongo / Mongoose
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.example.mongodb.net/dbname
MONGO_URI=mongodb+srv://<user>:<password>@cluster.example.mongodb.net/dbname

# Firebase (client-side config)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# Firebase Admin (server-side)
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_LINE_1\n...\n-----END PRIVATE KEY-----\n"

# Coinbase / Payments
COINBASE_COMMERCE_API_KEY=your_coinbase_commerce_api_key
COINBASE_COMMERCE_WEBHOOK_SECRET=your_coinbase_webhook_secret
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_WEBHOOK_SECRET=your_coinbase_webhook_secret

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Any other variables your deployment needs go here
